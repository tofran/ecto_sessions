<section class="row">
  <article class="column">
    <h2>Signup</h2>

    <%= form_for @conn, Routes.page_path(@conn, :signup), fn _form -> %>
      <%= submit "Create user" %>
    <% end %>

  </article>
  <article class="column">
    <h2>Login</h2>

    <%= form_for @conn, Routes.page_path(@conn, :login), fn f -> %>
      <label>
        User id:
        <%= text_input f,
            :user_id,
            placeholder: "user-id",
            autocomplete: "off",
            value: @last_user_id,
            required: true
          %>
      </label>
      <%= submit "Login" %>
    <% end %>
  </article>
</section>
